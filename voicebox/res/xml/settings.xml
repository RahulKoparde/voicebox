<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
            android:title="Storage">
            
 		<EditTextPreference
                android:key="default_file_name"
                android:title="File name"
                android:summary="Change the audio file name"
                android:defaultValue="VoiceBox"
                android:dialogTitle="File name" />
 		
 		<EditTextPreference
                android:key="default_folder"
                android:title="Folder Location"
                android:summary="Change where audio files are saved"
                android:defaultValue="VoiceBox"
                android:dialogTitle="Folder Location" />

    </PreferenceCategory>

    <PreferenceCategory
         android:title="Audio">
        
   		 <ListPreference
	            android:key="set_format"
	            android:entries="@array/type_format"
	            android:summary="Choose your file format"
	            android:entryValues="@array/type_format_value"
	            android:defaultValue="1"
	            android:title="File format" />
   		 
   		 <CheckBoxPreference 
            android:key="stop_record_quit"
            android:summary="Stop recording when leaving the application"
            android:title="Stop on exit" 
            android:defaultValue="false"/>
   		 
   		 
   		 <CheckBoxPreference
            android:key="pref_add_limit"
            android:summary="Add time limit to recording"
            android:title="Add time limit ?"
            android:defaultValue="false" />
   		 
   		<Preference 
            android:key="set_max_time"
            android:dependency="pref_add_limit"
            android:summary="Choose the time in seconds [TODO]"
            android:title="Choose the time in seconds [TODO]" 
            android:defaultValue="1"/>
   		 
    </PreferenceCategory>
    
    <PreferenceCategory
            android:title="Misc">
   		
        <CheckBoxPreference 
            android:key="use_dark_theme"
            android:summary="Use the ugly dark theme"
            android:title="Use dark theme" 
            android:defaultValue="false"/>
        
   	</PreferenceCategory>
 
    
</PreferenceScreen>